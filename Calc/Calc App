<script>  
const d = document.getElementById("disp");  
const a = v => d.value += v;  
const c = () => d.value = "";  
const del = () => d.value = d.value.slice(0, -1);  
const e = () => { try { d.value = eval(d.value.replace('%', '/100')) } catch { d.value = "Error" } };  
document.addEventListener("keydown", (event) => { if ("0123456789+-*/.%".includes(event.key)) { a(event.key); } else if (event.key === "Enter") { e(); } else if (event.key === "Backspace") { del(); } else if (event.key === "Escape") { c(); } });  
</script>  
